<div>
  <h1 style="text-align: center; font-weight: 600">Register</h1>
  <div class="container">
    <%= form_with(model: @user, local: true, class: "login-form") do |form| %>
      <% if @user.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

          <ul>
            <% @user.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="field text-field mui-textfield">
        <%= form.label :username %>
        <%= form.text_field :username %>
      </div>

      <div class="field text-field mui-textfield">
        <%= form.label :password %>
        <%= form.text_field :password, type: "password" %>
      </div>

      <div class="actions">
        <%= form.submit value: "Submit", class: "mui-btn mui-btn--primary", id: "submit-btn" %>
      </div>
    <% end %>
  </div>
</div>
